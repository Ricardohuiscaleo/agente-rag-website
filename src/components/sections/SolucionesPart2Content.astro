<script>
  // Funcionalidad mejorada para scroll h√≠brido (horizontal + vertical)
  document.addEventListener('DOMContentLoaded', () => {
    const carrusel = document.getElementById('carrusel-casos') as HTMLElement;
    
    if (carrusel) {
      let isScrollingHorizontally = false;
      
      // Detectar cuando el scroll horizontal ha terminado
      function isAtHorizontalEnd(): boolean {
        const { scrollLeft, scrollWidth, clientWidth } = carrusel as any;
        return scrollLeft >= scrollWidth - clientWidth - 10;
      }
      
      function isAtHorizontalStart(): boolean {
        return (carrusel as any).scrollLeft <= 10;
      }
      
      // Manejar el scroll h√≠brido
      carrusel.addEventListener('wheel', (e: WheelEvent) => {
        const scrollingDown = e.deltaY > 0;
        const scrollingUp = e.deltaY < 0;
        
        // Si es scroll horizontal (deltaX), permitir scroll horizontal normal
        if (Math.abs(e.deltaX) > Math.abs(e.deltaY)) {
          return; // Permitir scroll horizontal normal
        }
        
        // Si es scroll vertical
        if (Math.abs(e.deltaY) > Math.abs(e.deltaX)) {
          // Si scrolleamos hacia abajo y estamos al final del carrusel horizontal
          if (scrollingDown && isAtHorizontalEnd()) {
            // NO prevenir el evento - permitir scroll vertical hacia abajo
            return;
          }
          
          // Si scrolleamos hacia arriba y estamos al inicio del carrusel horizontal
          if (scrollingUp && isAtHorizontalStart()) {
            // NO prevenir el evento - permitir scroll vertical hacia arriba
            return;
          }
          
          // Si estamos en el medio del carrusel, convertir scroll vertical en horizontal
          e.preventDefault();
          (carrusel as any).scrollLeft += e.deltaY;
        }
      }, { passive: false });

      // Indicar cuando hay m√°s contenido por ver
      function updateScrollIndicator(): void {
        const scrollIndicator = document.querySelector('.scroll-indicator');
        if (scrollIndicator && carrusel) {
          const { scrollLeft, scrollWidth, clientWidth } = carrusel as any;
          const isAtStart = scrollLeft <= 10;
          const isAtEnd = scrollLeft >= scrollWidth - clientWidth - 10;
          
          let text = '';
          if (isAtStart && !isAtEnd) {
            text = 'Desliza hacia la derecha para ver m√°s soluciones ‚Üí';
          } else if (isAtEnd && !isAtStart) {
            text = 'Fin del carrusel - Puedes seguir bajando ‚Üì';
          } else if (!isAtStart && !isAtEnd) {
            text = '‚Üê Desliza horizontalmente para ver m√°s soluciones ‚Üí';
          }
          
          const textElement = scrollIndicator.querySelector('p');
          if (textElement) {
            textElement.textContent = text;
          }
        }
      }

      carrusel.addEventListener('scroll', updateScrollIndicator);
      updateScrollIndicator(); // Llamada inicial
      
      // Agregar indicadores visuales para mejor UX
      function addScrollIndicators(): void {
        if (!carrusel) return;
        
        const { scrollLeft, scrollWidth, clientWidth } = carrusel as any;
        const isAtStart = scrollLeft <= 10;
        const isAtEnd = scrollLeft >= scrollWidth - clientWidth - 10;
        
        // Agregar clase para indicar estado del scroll
        carrusel.classList.toggle('at-start', isAtStart);
        carrusel.classList.toggle('at-end', isAtEnd);
        carrusel.classList.toggle('in-middle', !isAtStart && !isAtEnd);
      }
      
      carrusel.addEventListener('scroll', addScrollIndicators);
      addScrollIndicators(); // Llamada inicial
    }
  });
</script>