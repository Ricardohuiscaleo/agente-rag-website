---
import ASCIIText from './ASCIIText';
---

<div class="ascii-text-container">
  <ASCIIText
    client:load
    text={Astro.props.text || 'Text'}
    textColor={Astro.props.textColor || '#ffffff'}
    asciiFontSize={Astro.props.asciiFontSize || 8}
    textFontSize={Astro.props.textFontSize || 200}
    planeBaseHeight={Astro.props.planeBaseHeight || 8}
    enableWaves={Astro.props.enableWaves !== false}
  />
</div>

<style>
  .ascii-text-container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 300px;
    display: block;
    background: transparent;
    border: none;
    overflow: visible;
  }
</style>
