---
// src/components/AstroChatContainer.astro
// Importa el componente React que contiene la interfaz del chat
import ChatInterface from './ChatInterface';

// Propiedades para configurar el contenedor
const {
  fullWidth = true,
  fullHeight = true,
  isSection = false,
  sectionClass = '',
  title = 'Chat RAG Empresarial',
} = Astro.props;
---

<div class={`chat-astro-wrapper ${isSection ? 'chat-section' : ''} ${sectionClass}`}>
  {
    title && isSection && (
      <div class="chat-section-header">
        <h3>{title}</h3>
      </div>
    )
  }

  {/* Renderiza el componente React sin ningún atributo problemático */}
  <ChatInterface client:only="react" />
</div>

<!-- Agregar Font Awesome para el ícono del avión -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
  integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"
/>

<style>
  /* Estilos base del wrapper */
  .chat-astro-wrapper {
    width: 100%;
    position: relative;
    box-sizing: border-box;
  }

  /* Estilos específicos cuando se usa como sección */
  .chat-section {
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(8px);
    border-radius: 12px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    padding: 0;
  }

  .chat-section-header {
    background-color: rgba(0, 0, 0, 0.05);
    padding: 15px 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .chat-section-header h3 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    text-align: center;
  }

  /* Media Query para altura en pantallas grandes */
  @media (min-width: 1024px) {
    .chat-astro-wrapper .chat-container {
      height: 600px;
    }

    .chat-section .chat-container {
      height: 100%;
    }
  }

  /* Media Query para pantallas medianas */
  @media (max-width: 768px) {
    .chat-astro-wrapper .chat-container {
      height: 500px;
    }

    .chat-section {
      border-radius: 8px;
    }
  }

  /* Media Query para h2 en pantallas pequeñas */
  @media (max-width: 600px) {
    .chat-astro-wrapper .chat-messages h2 {
      font-size: 1.15em !important;
      line-height: 1.3em !important;
    }
  }

  /* Media Query para móviles muy pequeños */
  @media (max-width: 400px) {
    .chat-astro-wrapper .chat-container {
      width: 100vw !important;
      max-width: none !important;
      margin: 0 !important;
      padding-left: 0 !important;
      padding-right: 0 !important;
      height: 500px; /* Ajuste para móviles */
      box-sizing: border-box !important;
    }

    .chat-astro-wrapper .chat-messages {
      max-width: 100% !important;
      padding-left: 5px !important;
      padding-right: 5px !important;
      box-sizing: border-box !important;
    }

    .chat-astro-wrapper .chat-input {
      width: calc(100% - 10px) !important;
      margin-left: 5px !important;
      margin-right: 5px !important;
      box-sizing: border-box !important;
    }

    .chat-astro-wrapper .message {
      max-width: 90% !important;
      box-sizing: border-box !important;
    }

    .chat-astro-wrapper .chat-messages h2 {
      font-size: 1.15em !important;
      line-height: 1.3 !important;
    }
  }

  /* Otros estilos específicos */
  .dropdown-btn::before {
    content: '...';
    font-size: 16px;
  }
</style>
