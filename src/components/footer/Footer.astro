  <!-- Script: Original del Acordeón + NUEVA lógica para cargar mapa -->
  <script>
    // --- Lógica del Acordeón (Original) ---
    function setupOriginalAccordion() {
      const footer = document.getElementById('main-footer');
      if (!footer) return;
      const collapsibleSections = footer.querySelectorAll('.collapsible');
      const firstSection = document.getElementById('footer-rag-info');

      collapsibleSections.forEach((section) => {
        const title = section.querySelector('h6');
        if (title) {
          const content = section.querySelector('.collapsible-content-enhanced');
          if (!content) return;
          const toggleAccordion = (event) => {
            if (window.innerWidth <= 768) {
              const isOpen = section.classList.toggle('is-open');
              title.setAttribute('aria-expanded', isOpen.toString());
            }
          };
          title.addEventListener('click', toggleAccordion);
          title.addEventListener('keydown', function (event) {
            if (window.innerWidth <= 768 && (event.key === 'Enter' || event.key === ' ')) {
              event.preventDefault();
              const isOpen = !section.classList.contains('is-open');
              section.classList.toggle('is-open');
              title.setAttribute('aria-expanded', isOpen.toString());
            }
          });
          let initialExpandedState = window.innerWidth > 768;
          if (section.id === 'footer-rag-info' && window.innerWidth <= 768) {
            initialExpandedState = true;
          }
          if (initialExpandedState && section.id === 'footer-rag-info') {
            section.classList.add('is-open');
          }
          title.setAttribute('aria-expanded', initialExpandedState.toString());
          title.setAttribute('role', 'button');
          title.setAttribute('tabindex', '0');
          window.addEventListener('resize', () => {
            const isMobile = window.innerWidth <= 768;
            if (!isMobile) {
              section.classList.remove('is-open');
              title.setAttribute('aria-expanded', 'true');
            } else {
              title.setAttribute('aria-expanded', section.classList.contains('is-open').toString());
            }
            title.style.cursor = isMobile ? 'pointer' : 'default';
          });
        }
      });

      if (window.innerWidth <= 768 && firstSection && !firstSection.classList.contains('is-open')) {
        firstSection.classList.add('is-open');
        const firstTitle = firstSection.querySelector('h6');
        if (firstTitle) firstTitle.setAttribute('aria-expanded', 'true');
      }
    }

    // --- NUEVA Lógica para Cargar Mapa ---
    function setupMapLoader() {
      const mapButton = document.getElementById('load-map-button');
      const mapPlaceholder = document.getElementById('map-placeholder');

      if (!mapButton || !mapPlaceholder) {
        return;
      }

      mapButton.addEventListener(
        'click',
        () => {
          const mapIframe = document.createElement('iframe');
          mapIframe.src =
            'https://maps.google.com/maps?q=Sta.%20Magdalena%2075,%20Oficina%20304,%207510057%20Providencia,%20Regi%C3%B3n%20Metropolitana&t=m&z=15&ie=UTF8&output=embed';
          mapIframe.loading = 'lazy';
          mapIframe.referrerPolicy = 'no-referrer-when-downgrade';
          mapIframe.title = 'Mapa de ubicación';
          mapIframe.style.border = '0';
          mapIframe.style.width = '100%';
          mapIframe.style.height = '100%';
          mapIframe.style.borderRadius = '18px';

          mapPlaceholder.innerHTML = '';
          mapPlaceholder.appendChild(mapIframe);

          mapButton.style.display = 'none';
        },
        { once: true }
      );
    }

    // --- Defer no crítico ---
    const setupFooter = () => {
      if ('IntersectionObserver' in window) {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              setupMapLoader();
              observer.disconnect();
            }
          });
        });

        const footerElement = document.querySelector('.footer-enhanced');
        if (footerElement) {
          observer.observe(footerElement);
        }
      } else {
        setupMapLoader();
      }
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        setupOriginalAccordion();
        setupFooter();
      });
    } else {
      setupOriginalAccordion();
      setupFooter();
    }
  </script>

