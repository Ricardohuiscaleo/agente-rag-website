---
import Layout from '../layouts/Layout.astro';

// Define los metadatos de la página
const pageTitle = 'Contacto | Agente RAG - Soluciones de IA para tu empresa';
const pageDescription =
  'Ponte en contacto con nuestro equipo de expertos en IA RAG. Estamos disponibles para responder tus preguntas y ayudarte a implementar soluciones personalizadas para tu negocio.';
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="page-container">
    <section class="hero-section">
      <h1 class="main-title">Contacto</h1>
      <p class="subtitle">Estamos aquí para ayudarte</p>
    </section>

    <section class="contact-section">
      <div class="contact-grid">
        <div class="contact-form-container">
          <h2>Envíanos un mensaje</h2>
          <p class="form-intro">
            Completa el formulario y nos pondremos en contacto contigo a la brevedad.
          </p>

          <form class="contact-form">
            <div class="form-group">
              <label for="name">Nombre completo <span class="required">*</span></label>
              <input type="text" id="name" name="name" required placeholder="Ingresa tu nombre" />
            </div>

            <div class="form-group">
              <label for="company">Empresa</label>
              <input type="text" id="company" name="company" placeholder="Nombre de tu empresa" />
            </div>

            <div class="form-group">
              <label for="email">Correo electrónico <span class="required">*</span></label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="tucorreo@ejemplo.com"
              />
            </div>

            <div class="form-group">
              <label for="phone">Teléfono</label>
              <input type="tel" id="phone" name="phone" placeholder="+56 9 1234 5678" />
            </div>

            <div class="form-group full-width">
              <label for="subject">Asunto <span class="required">*</span></label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                placeholder="¿En qué podemos ayudarte?"
              />
            </div>

            <div class="form-group full-width">
              <label for="message">Mensaje <span class="required">*</span></label>
              <textarea
                id="message"
                name="message"
                required
                placeholder="Cuéntanos más sobre lo que necesitas..."></textarea>
            </div>

            <div class="form-group full-width">
              <button type="submit" class="submit-button">
                <span>Enviar mensaje</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  class="button-icon"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </button>
            </div>
          </form>
        </div>

        <div class="contact-info-container">
          <h2>Información de contacto</h2>
          <div class="contact-info">
            <div class="info-item">
              <div class="info-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div class="info-content">
                <h3>Correo electrónico</h3>
                <p><a href="mailto:contacto@agenterag.com">contacto@agenterag.com</a></p>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div class="info-content">
                <h3>Teléfono</h3>
                <p><a href="tel:+56912345678">+56 9 1234 5678</a></p>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div class="info-content">
                <h3>Dirección</h3>
                <p>Av. Providencia 1234, Oficina 567<br />Providencia, Santiago, Chile</p>
              </div>
            </div>

            <div class="info-item">
              <div class="info-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="info-content">
                <h3>Horario de atención</h3>
                <p>Lunes a Viernes: 9:00 - 18:00<br />Sábado: 10:00 - 14:00</p>
              </div>
            </div>
          </div>

          <div class="social-media">
            <h3>Síguenos en redes sociales</h3>
            <div class="social-icons">
